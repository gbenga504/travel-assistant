{
  "name": "frontend",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "npm run build:css && remix vite:build",
    "dev": "concurrently \"npm run typecheck\" \"npm run sass:dev\" \"remix vite:dev\"",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint --fix .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "build:css": "sass app/:app/",
    "sass:dev": "sass --watch app/:app/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "cd .. && cd .. && husky packages/frontend/.husky"
  },
  "dependencies": {
    "@microsoft/fetch-event-source": "^2.0.1",
    "@remix-run/node": "^2.15.2",
    "@remix-run/react": "^2.15.2",
    "@remix-run/serve": "^2.15.2",
    "axios": "^1.8.2",
    "classnames": "^2.5.1",
    "isbot": "^4.1.0",
    "nanoid": "^5.0.9",
    "react": "^18.2.0",
    "react-bootstrap-icons": "^1.11.5",
    "react-dom": "^18.2.0",
    "sanitize-html": "^2.14.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.2",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/sanitize-html": "^2.13.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.1.2",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "postcss": "^8.4.38",
    "prettier": "^3.5.1",
    "sass": "^1.83.4",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
